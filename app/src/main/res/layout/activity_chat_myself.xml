<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:id="@+id/layout_myself"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_chat_myself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_sender"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"

        >


        <TextView
            android:id="@+id/text_chat_my_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cabin"
            android:text="Message"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/image_chat_myself"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/date_chat_my_self"
        android:layout_below="@+id/layout_chat_myself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:05 PM"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="10sp" />










</RelativeLayout>
