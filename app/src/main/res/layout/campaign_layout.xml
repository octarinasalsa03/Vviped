<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/post_topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/organization_profpict_post"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/profilpic" />

            <TextView
                android:id="@+id/organizationname_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="akunsaya"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imagecampaign_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profilpic" />

        <TextView
            android:id="@+id/campaign_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:text="Bantu Pak Somat Mengobati Penyakit Kanker"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deskripsicampaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:text="Description:"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linear_layout1">

            <TextView
                android:id="@+id/campaign_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/donatewithselling_btn"
                android:layout_toLeftOf="@+id/donatewithselling_btn"
                android:text="Description here"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:layout_alignParentLeft="true" />
            <Button
                android:id="@+id/donatewithselling_btn"

            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Donate by Selling"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

        </RelativeLayout>


        <TextView
            android:id="@+id/lokasicampaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Location:"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lokasi_campaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:text="Rawamangun, Jakarta Timur"
            android:textColor="@color/colorBlack"
            android:textSize="13dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
