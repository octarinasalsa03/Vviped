<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:id="@+id/layoutUser"
    tools:context=".chat_user"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/profilpic"
        android:layout_alignParentLeft="true" />



    <RelativeLayout
        android:id="@+id/layout_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/icon_user"
        android:background="@drawable/bg_receiver"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginRight="100dp">

        <TextView
            android:id="@+id/text_chat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/cabin"
            android:text="Message"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_chat_user"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitEnd"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        tools:ignore="NotSibling"
        />


    <TextView
        android:id="@+id/date_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_chat_user"
        android:text="12:05 PM"
        android:textSize="10sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
       />

</RelativeLayout>
